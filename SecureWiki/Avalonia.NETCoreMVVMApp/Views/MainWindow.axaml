<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:SecureWiki.ViewModels"
        xmlns:Models="clr-namespace:SecureWiki.Model"
        xmlns:secureWiki="clr-namespace:SecureWiki"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="400"
        x:Class="SecureWiki.Views.MainWindow"
        Opened="MainWindow_Shown"
        Icon="/Assets/avalonia-logo.ico"
        Title="Please find a better name"
        Padding="10">
    <Window.Resources>
        <Models:FillerTextBlockWidthConverterMulti x:Key="WidthConverterMulti" />
        <Models:TreeViewItemColourConverter x:Key="TreeViewItemColourConverter" />
    </Window.Resources>


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <!--Left side panel-->
        <StackPanel Orientation="Vertical" VerticalAlignment="Top" Height="150" Width="300" x:Name="ButtonControlSp">
            <!--
            <TextBlock Name="NameLabel">What is your name?</TextBlock>
            <TextBox Name="NameTextBox"></TextBox>
            <TextBlock Name="MessageLabel"></TextBlock>        
            -->

            <TextBox Name="TextBox1" IsReadOnly="True" Width="{Binding  Width,ElementName=ButtonControlSp}"
                     TextWrapping="Wrap">
                The user may not modify the contents of this TextBox.
            </TextBox>

            <Button Name="Button1" Click="Button1_Click">Button1</Button>
            <Button Name="Button2" Click="Button2_Click">Print keyring info</Button>
            <Button Name="Button3" Click="ButtonExport_Click">Export keyring</Button>
            <Button Name="Button4" Click="ButtonImport_Click">Import keyring</Button>

            <TextBlock>Enter IP address of MediaWiki server</TextBlock>
            <TextBox Name="TextBoxIp" Width="{Binding  Width,ElementName=ButtonControlSp}" TextWrapping="Wrap"
                     Text="{Binding IP}" />
            <Button Name="ButtonIp" Click="ButtonIP_Click">Change</Button>

            <TextBlock>Login to MediaWiki</TextBlock>
            <TextBox Name="TextBoxUser" Width="{Binding  Width,ElementName=ButtonControlSp}" TextWrapping="Wrap"
                     Text="{Binding Username}" Watermark="Username" />
            <TextBox Name="TextBoxPass" Width="{Binding  Width,ElementName=ButtonControlSp}" TextWrapping="Wrap"
                     Text="{Binding Password}" Watermark="Password" />
            <Button Name="ButtonLogin" Click="ButtonLogin_Click">Login</Button>

            <!-- <TextBlock>Send keyring</TextBlock> -->
            <!-- -->
            <!-- <TextBox Name="TextBoxMail" Width="{Binding  Width,ElementName=ButtonControlSp}" TextWrapping="Wrap" Text="{Binding MailRecipient}" Watermark="Email recipient"> -->
            <!-- </TextBox> -->
            <!-- <Button Name="MailButton" Click="ButtonMail">Login</Button> -->


        </StackPanel>


        <!--TreeView-->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                      Name="ScrollViewerTreeView">
            <StackPanel Orientation="Vertical">
                <TreeView Items="{Binding rootKeyringCollection, Mode=TwoWay}" Name="TreeView1">
                    <TreeView.DataTemplates>
                        <TreeDataTemplate DataType="Models:RootKeyring" ItemsSource="{Binding combinedList}">
                            <StackPanel Orientation="Horizontal">
                                <!--IsChecked CheckBox-->
                                <CheckBox IsChecked="{Binding isChecked}" MinWidth="20" Name="CheckBox"
                                          Initialized="CheckBox_OnInitialized" />
                                <!--IsCheckedWrite CheckBox-->
                                <CheckBox IsChecked="{Binding isCheckedWrite}" MinWidth="20" Name="CheckBoxWrite"
                                          IsEnabled="{Binding isCheckedWriteEnabled}" />
                                <!--Folder-->
                                <Border BorderBrush="{x:Null}" Height="{Binding Height, ElementName=CheckBox}">
                                    <TextBlock Foreground="Red" VerticalAlignment="Center"
                                               Text="{Binding name, Mode=TwoWay}" />
                                </Border>
                            </StackPanel>
                        </TreeDataTemplate>
                        <TreeDataTemplate DataType="Models:KeyringEntry" ItemsSource="{Binding combinedList}">
                            <StackPanel Orientation="Horizontal">
                                <!--IsChecked CheckBox-->
                                <CheckBox IsChecked="{Binding isChecked}" MinWidth="20" Name="CheckBox"
                                          Initialized="CheckBox_OnInitialized" />
                                <!--IsCheckedWrite CheckBox-->
                                <CheckBox IsChecked="{Binding isCheckedWrite}" MinWidth="20" Name="CheckBoxWrite"
                                          IsEnabled="{Binding isCheckedWriteEnabled}" />
                                <!--Folder-->
                                <Border BorderBrush="{x:Null}" Height="{Binding Height, ElementName=CheckBox}">
                                    <TextBlock VerticalAlignment="Center" Text="{Binding name}" />
                                </Border>
                            </StackPanel>
                        </TreeDataTemplate>
                        <DataTemplate DataType="Models:DataFileEntry">
                            <DockPanel LastChildFill="False" Name="DockPanel_DataFileEntry"
                                       MaxWidth="{Binding Bounds.Width, ElementName=ScrollViewerTreeView}">
                                <!--IsChecked CheckBox-->
                                <CheckBox IsChecked="{Binding isChecked}" DockPanel.Dock="Left" MinWidth="20"
                                          Name="CheckBox" Initialized="CheckBox_OnInitialized" />
                                <!--IsCheckedWrite CheckBox-->
                                <CheckBox IsChecked="{Binding isCheckedWrite}" DockPanel.Dock="Left" MinWidth="20"
                                          Name="CheckBoxWrite" IsEnabled="{Binding isCheckedWriteEnabled}" />
                                <DockPanel DockPanel.Dock="Left"
                                           Background="{Binding newestRevisionSelected, Converter={StaticResource TreeViewItemColourConverter}}">
                                    <!--DataFile -->
                                    <TextBlock Foreground="Blue" Name="TextBlockDataFileEntry"
                                               VerticalAlignment="Center"
                                               PointerPressed="InputElement_OnPointerPressed" Text="{Binding filename}" />
                                    <!-- This is stupid, but it works decently. -->
                                    <TextBlock Foreground="Blue" Name="TextBlockFillDataFileEntry"
                                               VerticalAlignment="Center"
                                               PointerPressed="InputElement_OnPointerPressed"
                                               Text="                                                                                     
                                                                                                                             ">
                                        <TextBlock.Width>
                                            <MultiBinding Converter="{StaticResource WidthConverterMulti}">
                                                <Binding Path="Bounds.Width" ElementName="ScrollViewerTreeView" />
                                                <Binding Path="Bounds.Width" ElementName="DockPanel_DataFileEntry" />
                                                <Binding Path="Bounds.Width" ElementName="CheckBox" />
                                                <Binding Path="Bounds.Width" ElementName="CheckBoxWrite" />
                                                <Binding Path="Bounds.Width" ElementName="TextBlockDataFileEntry" />
                                                <Binding Path="Bounds.Width" ElementName="TreeView1" />
                                            </MultiBinding>
                                        </TextBlock.Width>
                                    </TextBlock>
                                </DockPanel>
                            </DockPanel>
                        </DataTemplate>
                    </TreeView.DataTemplates>
                </TreeView>
            </StackPanel>
        </ScrollViewer>

        <!--Right side panel-->
        <DockPanel Grid.Column="2">
            <ContentControl Content="{Binding selectedFile, Mode=TwoWay}" Width="300" DockPanel.Dock="Top"
                            IsVisible="{Binding revisions, Converter={x:Static ObjectConverters.IsNotNull}}">
                <ContentControl.ContentTemplate>
                    <DataTemplate DataType="Models:DataFileEntry">
                        <Grid ColumnDefinitions="Auto,Auto" RowDefinitions="Auto">
                            <TextBlock Grid.Row="0" Grid.Column="0">Filename: </TextBlock>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding filename}" />
                        </Grid>
                    </DataTemplate>
                </ContentControl.ContentTemplate>
            </ContentControl>

            <TextBlock Text="Revoke access to file" DockPanel.Dock="Top"
                       IsVisible="{Binding selectedFile, Converter={x:Static ObjectConverters.IsNotNull}}" />
            <Button Name="RevokeAccessButton" DockPanel.Dock="Top"
                    IsVisible="{Binding selectedFile, Converter={x:Static ObjectConverters.IsNotNull}}" Width="100"
                    Height="30" Click="ShowButtonPopup_Click" Tag="RevokeAccessPopup">
                Revoke
            </Button>
            <Button Name="CacheSettingButton" DockPanel.Dock="Top"
                    IsVisible="{Binding selectedFile, Converter={x:Static ObjectConverters.IsNotNull}}" Width="100"
                    Height="30" Click="ShowButtonPopup_Click" Tag="CacheSettingPopup">
                Cache setting
            </Button>

            <!--Revoke access popup-->
            <Popup Name="RevokeAccessPopup" PlacementTarget="RevokeAccessButton">
                <Border IsVisible="{Binding IsAccessRevocationPopupOpen}" BorderBrush="Black" BorderThickness="1,1,1,1">
                    <Grid>
                        <TextBlock Name="AccessRevocationText" Background="White"
                                   Text="Are you that you want to revoke access to the file?&#x0a; This action cannot be undone."
                                   TextAlignment="Center" />
                        <Grid ColumnDefinitions="Auto,Auto" RowDefinitions="Auto">
                            <Button Grid.Column="0" Click="HideButtonPopup_Click" Tag="RevokeAccessPopup" Margin="30,80,10,10">Cancel</Button>
                            <Button Grid.Column="1" Click="Revoke_Click" Tag="RevokeAccessPopup" Margin="150,80,30,10" Background="LightBlue">Confirm</Button>
                        </Grid>
                    </Grid>
                </Border>
            </Popup>
            
            <!--Cache setting popup-->
            <Popup Name="CacheSettingPopup" PlacementTarget="CacheSettingButton" Opened="CacheSettingPopup_OnOpened">
                <Border IsVisible="{Binding IsCacheSettingPopupOpen}" BorderBrush="Black" BorderThickness="1,1,1,1">
                    <Grid>
                        <TextBlock Name="CacheSettingPopupTextBlock" Background="White"
                                   Text="Cache setting&#x0a; Which revisions should be kept in cache between sessions?"
                                   TextAlignment="Center" />
                        <Grid ColumnDefinitions="Auto,Auto,Auto,Auto,Auto" RowDefinitions="Auto">
                            <Button Grid.Column="0" Click="HideButtonPopup_Click" Tag="CacheSettingPopup" Margin="10,80,30,10">Cancel</Button>
                            <Button Grid.Column="1" Name="CacheSettingPopupDefault" Content="Default" Click="CacheSettingButton_Click" Tag="CacheSettingPopup" Margin="5,80,5,10" Background="LightBlue"/>
                            <Button Grid.Column="2" Name="CacheSettingPopupKeepAll" Content="KeepAll" Click="CacheSettingButton_Click" Tag="CacheSettingPopup" Margin="5,80,5,10" Background="LightBlue"/>
                            <Button Grid.Column="3" Name="CacheSettingPopupKeepLatest" Content="KeepLatest" Click="CacheSettingButton_Click" Tag="CacheSettingPopup" Margin="5,80,5,10" Background="LightBlue"/>
                            <Button Grid.Column="4" Name="CacheSettingPopupKeepNone" Content="KeepNone" Click="CacheSettingButton_Click" Tag="CacheSettingPopup" Margin="5,80,10,10" Background="LightBlue"/>
                        </Grid>
                    </Grid>
                </Border>
            </Popup>


            <!-- <Grid ColumnDefinitions="Auto,Auto" RowDefinitions="Auto"> -->
            <!--     <TextBlock Grid.Row="0" Grid.Column="0" Text="Selected RevisionID: "></TextBlock> -->
            <!--     <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding filename}"/> -->
            <!-- </Grid> -->

            <!-- <TextBlock Width="300" TextWrapping="Wrap" Text="The MediaWiki server does not contain any revisions for the selected file"> -->
            <!--     <TextBlock.IsVisible> -->
            <!--         <MultiBinding Converter="{x:Static BoolConverters.And}"> -->
            <!--             <Binding Path="selectedFile" -->
            <!--                      Converter="{x:Static ObjectConverters.IsNotNull}"/> -->
            <!--             <Binding Path="revisions" -->
            <!--                      Converter="{x:Static ObjectConverters.IsNull}"/> -->
            <!--         </MultiBinding> -->
            <!--     </TextBlock.IsVisible> -->
            <!-- </TextBlock> -->

            <TextBlock Text="Select revision to open" DockPanel.Dock="Top"
                       IsVisible="{Binding selectedRevision, Converter={x:Static ObjectConverters.IsNotNull}}" />
            <Button Name="SelectedRevisionButton" DockPanel.Dock="Top"
                    IsVisible="{Binding selectedRevision, Converter={x:Static ObjectConverters.IsNotNull}}"
                    Click="SelectedRevisionButton_OnClick">
                Select
            </Button>
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <StackPanel>
                    <ListBox Items="{Binding revisions, Mode=TwoWay}" SelectionMode="Single"
                             SelectedItem="{Binding selectedRevision}" Width="300">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid ColumnDefinitions="Auto,Auto" RowDefinitions="Auto,Auto, Auto, Auto">
                                    <TextBlock Grid.Row="0" Grid.Column="0">revisionID: </TextBlock>
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding revisionID}" />
                                    <TextBlock Grid.Row="1" Grid.Column="0">owner: </TextBlock>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding user}" />
                                    <TextBlock Grid.Row="2" Grid.Column="0">time: </TextBlock>
                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding timestamp}" />
                                    <TextBlock Grid.Row="3" Grid.Column="0">size: </TextBlock>
                                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding size}" />
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </ScrollViewer>
        </DockPanel>
    </Grid>

</Window>